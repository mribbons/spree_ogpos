<div id="pos_keypad">
    <% for y in 0..2 do %>
    <div class="pos_keypad_button_row">
      <% for x in 1..3 do %><%= render partial: 'pos_button', locals: { value: "#{x + (y*3)}", id: "pos_keypad_num_#{x*y}", myclass: 'pos_keypad_num' } %><% end %>
    </div>
    <% end %>
  <div class="pos_keypad_button_row">
    <%= render partial: 'pos_button', locals: { value: '0', id: 'pos_keypad_num_0', myclass: 'pos_keypad_num_0 pos_keypad_num' } %><%
     # Textual whitespace makes spaces between divs
    %><%= render partial: 'pos_button', locals: { value: '.', id: 'pos_keypad_num_dot', myclass: 'pos_keypad_num_dot pos_keypad_num' } %>
  </div>
</div>